<%- include('../partials/header') %>
    <table>
        <thead>
            <tr>
                <th>AirLine</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure Time</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td>
                        <%= flight.airline %>
                    </td>
                    <td>
                        <%= flight.airport %>
                    </td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                    <td>
                        <%= flight.departs%>
                    </td>
                    <td><a href="/flights/<%= flight._id %>">MORE INFORMATION</a></td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>